<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="font.css" />
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="form-styles.css">
  <title>PeekaPost Sign Up</title>
</head>
<body>
  <%- include("./partials/header") %>
  <main class="form-main">
    <div class="form-container">
      <h2>Welcome to PeekaPost</h2>
      <div class="form-wrapper">
        <% if (messages.length > 0) { %>
          <div class="errors-list-container">
            <ul class="errors-list">
              <li class="error-msg"><%= messages[0] %></li>
            </ul>
          </div>
        <% } %>
        <form action="/sign-in" method="POST">
          <div class="form-field">
            <label for="username">Username</label>
            <input name="username" id="username" type="text" min="3" max="30" placeholder="Enter your username" required>
          </div>
          <div class="form-field">
            <label for="password">Password</label>
            <input name="password" id="password" type="password" min="8" max="64" placeholder="Enter your password" required>
          </div>
          <div>
            <input class="form-btn" type="submit" value="Log In">
          </div>
        </form>
      </div>
      <p>Don't have an account? <a class="nav-link" href="/sign-up">Sign up</a></p>
    </div>
  </main>
  <%- include("./partials/footer") %>
</body>
<script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
<script>
  lucide.createIcons();
</script>
</html>