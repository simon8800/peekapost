<div id="message-<%= message.id %>" class="message flex align-center gap-md">
  <img src="https://placehold.co/40" alt="avatar" class="avatar border-full"/>
  <div class="flex flex-col gap-xs">
    <% if (user) { %>
      <p class="message_username"><%= message.username %></p>
    <% } else { %> 
      <p class="message_username">user</p>
    <% } %>
    <p class="message_text"><%= message.content %></p>
    <% if (user) { %>
      <p class="message_timestamp"><%= message.created_at %></p>
    <% } %>
    <% if (user && user.admin) { %>
      <div>
        <button class="delete-message-btn" onclick="deleteMessage('<%= message.id %>')" type="submit">Delete message</button>
      </div>
    <% } %>
  </div>
</div>